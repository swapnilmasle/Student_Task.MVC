@model IEnumerable<Project1.Models.Registration>


@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Login Page </title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
   
    <link href="~/css/site.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

</head>
<body>


    <h2>List Page</h2>
    <a asp-action="Index" asp-controller="Template" class="btn btn-primary">Go to Home Page</a>
    <a asp-action="RegistrationPage" asp-controller="User" class="btn btn-primary">Add User</a>
   @*  @Html.ActionLink("Add User", "RegistrationPage", new { name = "add" }) *@
   
    @if (Model != null && Model.Any()) 
    {
        <table class="table" border="1">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var User in Model)
                {
                    <tr>
                        <td>@User.Id</td>
                        <td>@User.Name</td>
                        <td>@User.Email</td>

                        @* <td><a href="/User/Edit/@user.Id">Edit</a></td>
                        <td><a href="/User/Delete/@user.Id">Delete</a></td> *@
                        <td> <a asp-action="Edit" asp-controller="User" asp-route-id="@User.Id">Edit </a>  </td>
                        <td> @Html.ActionLink("Delete", "Delete", new { id = User.Id }) </td>
                    </tr>

                }
            </tbody>

        </table>
    }
    else
    {
        <p>No registrations found.</p>
    }
</body>