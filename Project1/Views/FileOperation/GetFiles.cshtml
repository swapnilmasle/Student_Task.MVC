@model IEnumerable<UploadModel>
@{
    Layout = null;
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - List Page </title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

</head>
<h2>List of Uploaded Files</h2>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>File Name</th>
                <th>File type</th>

                <th>Download</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var upload in Model)
            {
                <tr>
                    <td>@upload.Id</td>
                    <td>@upload.FileName</td>
                    <td>@upload.FileType</td>
                    
                    @* <td> <a asp-action="FileDowmload" asp-controller="FileOperation" asp-route-id="@upload.Id">Download </a>  </td> *@
                    <td>@Html.ActionLink("Download", "FileDowmload", new { filename = upload.FileName, upload.FileType })</td>

                    
                    
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No files uploaded yet.</p>
}


